<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary">

    <ImageView
        android:id="@+id/activity_semicircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stats_90days"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/activity_semicircle" />

    <ImageView
        android:id="@+id/sleep_semicircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_semicircle"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/sleep_semicircle" />
    <Button
        android:id="@+id/stats_alltime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:text="All Time" />

    <Button
        android:id="@+id/stats_30days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/stats_90days"
        android:text="30 Days" />

    <Button
        android:id="@+id/stats_90days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/stats_alltime"
        android:text="Button" />


    <ImageView
        android:id="@+id/supsadExercise"
        android:layout_width="230dp"
        android:layout_height="250dp"
        android:layout_alignBottom="@+id/activity_semicircle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="-4dp"
        app:srcCompat="@drawable/arrow" />


</RelativeLayout>