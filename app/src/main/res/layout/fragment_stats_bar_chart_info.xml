<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageButton
        android:id="@+id/infoButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:padding="17dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/info_button" />

    <ImageView
        android:id="@+id/bars_info"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/stats_30days"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/bars_info" />

    <TextView
        android:id="@+id/bars_info_explainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/activity_semicircle"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="350dp"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"

        android:text="In the long-term evaluation, the data of each individual day can be viewed in detail. The duration of sleep of the previous night (purple) and the duration of activity measured in steps (red) are displayed.
In the lower section, you can also view data about the period of sleep (start and end) and the mood of each day." />

    <ImageView
        android:id="@+id/stats_info"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/activity_semicircle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="460dp"
        app:srcCompat="@drawable/stats_info" />


    <View
        android:id="@+id/divider9"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="457dp"
        android:background="?android:attr/listDivider" />

    <View
        android:id="@+id/divider11"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="386dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/textviewEx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="20dp"
        android:text="Info"
        android:textSize="24sp"
        android:textStyle="bold" />



</RelativeLayout>