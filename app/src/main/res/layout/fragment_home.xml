<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/supersadButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="7dp"
        android:layout_marginBottom="275dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/supersad" />

    <ImageButton
        android:id="@+id/sadButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="275dp"
        android:layout_toEndOf="@+id/supersadButton"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/sad" />

    <ImageButton
        android:id="@+id/neutralButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="275dp"
        android:layout_toEndOf="@+id/sadButton"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/neutral" />

    <ImageButton
        android:id="@+id/happyButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="275dp"
        android:layout_toEndOf="@+id/neutralButton"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/happy" />

    <ImageButton
        android:id="@+id/superhappyButton"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="275dp"
        android:layout_toEndOf="@+id/happyButton"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/superhappy" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/neutralButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:text="How did you feel today?"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/infoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_info_details" />

</RelativeLayout>